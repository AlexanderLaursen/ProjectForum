@model UpdatePostViewModel

@if (Model.Post == null)
{
    <p>There was an error getting the original comment</p>
}
else
{
    <h3>@Model.Post.Title</h3>
    <p>@Model.Post.Content</p>
}

<form asp-controller="Post" asp-action="Update" method="post">
    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" />
        <label asp-for="Content"></label>
        <input asp-for="Content" class="form-control" />
    </div>
    <input asp-for="CategoryId" type="hidden" value="@Model.CategoryId"/>
    <input type="hidden" name="postId" value="@Model.PostId" />
    <button type="submit" class="btn btn-primary">Edit post</button>
</form>