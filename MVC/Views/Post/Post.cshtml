@model PostViewModel
@{
}
<div class="">
    <table class="table table-striped table-bordered table-hover">
        <thead>
        </thead>
        <tbody>
            <tr>
                <td>
                    <div>
                        User:
                    </div>
                    <div>
                        @Model.Post.User
                    </div>
                </td>
                <td>
                    <h3>
                        @Model.Post.Title

                    </h3>
                    <p>
                        @Model.Post.Content
                    </p>

                </td>
                <td>
                    <div class="text-nowrap">
                        <div>
                            Created at: @Model.Post.CreatedAt
                        </div>
                        <div>
                            Likes: @Model.Post.Likes
                        </div>
                        <div>
                            Edited: @Model.Post.Edited
                        </div>
                    </div>
                </td>
            </tr>
            @foreach (Comment comment in Model.Comments)
            {
                <tr>
                    <td>
                        <div>
                            User:
                        </div>
                        <div>
                        @comment.User
                        </div>
                    </td>
                    <td class="w-100">
                        <p>
                            @comment.Content
                        </p>
                    </td>
                    <td>
                        <div class="text-nowrap">
                            <div>
                                Created at: @comment.CreatedAt
                            </div>
                            <div>
                                Likes: @comment.Likes
                            </div>
                            <div>
                                Edited: @comment.Edited
                            </div>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>